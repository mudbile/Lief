{
    "description": "Adds ability to retrieve full CSS selector of elements to context menu.",
    "manifest_version": 2,
    "name": "CSS Selector",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"]
    },
    
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["addevents.js"]
    }],

    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}
